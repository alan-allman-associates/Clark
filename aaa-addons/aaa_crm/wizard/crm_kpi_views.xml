<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="crm_kpi_view" model="ir.ui.view">
         <field name="name">crm kpi</field>
         <field name="model">crm.kpi</field>
         <field name="arch" type="xml">
            <form string="Générer KPI">
                <group>
                    <field name="company_id"/>
                </group>
                <group>
                    <group>
                        <field name="axe1"/>
                        <field name="axe2"/>
                        <field name="axe3"/>
                    </group>
                    <group>
                        <field name="axe4"/>
                        <field name="axe5"/>
                        <field name="date_range"/>
                    </group>
                </group>
                <footer>
                    <button name="action_crm_kpi" string="Ok" type="object" icon="fa-cog"/>
                    ou
                    <button string="Annuler" class="oe_link" special="cancel" />
                </footer>

            </form>
         </field>
     </record>

    <record id="action_crm_kpi" model="ir.actions.act_window">
         <field name="name">Générer KPI</field>
         <field name="res_model">crm.kpi</field>
         <field name="type">ir.actions.act_window</field>
         <field name="view_mode">form</field>
         <field name="view_id" ref="crm_kpi_view"/>
         <field name="target">new</field>
   </record>

    <menuitem
        name="Générer KPI"
        action="action_crm_kpi"
        id="menu_account_csv_export"
        parent="crm.crm_menu_report"
        sequence="110"
        />

</odoo>
