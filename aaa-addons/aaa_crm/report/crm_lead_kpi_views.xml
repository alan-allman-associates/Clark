<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="crm_lead_kpi_customer_action" model="ir.actions.act_window">
        <field name="name">KPI client</field>
        <field name="res_model">crm.lead.kpi.customer</field>
        <field name="view_type">form</field>
        <field name="view_mode">pivot</field>
        <field name="context">{'add_partner':True}</field>
    </record>

    <record id="crm_lead_kpi_company_action" model="ir.actions.act_window">
        <field name="name">KPI Cabinet</field>
        <field name="res_model">crm.lead.kpi.company</field>
        <field name="view_type">form</field>
        <field name="view_mode">pivot</field>
        <field name="context">{'add_company':True}</field>
    </record>




    <menuitem
    name="KPI clients"
    action="aaa_crm.crm_lead_kpi_customer_action"
    id="menu_crm_kpi_partner_crm"
    parent="aaa_crm.menu_kpi_root"
    groups="aaa_crm.crm_kpi_groupe"
    sequence="2"
    />

    <menuitem
    name="KPI cabinets"
    action="aaa_crm.crm_lead_kpi_company_action"
    id="menu_crm_kpi_company_crm"
    parent="aaa_crm.menu_kpi_root"
    groups="aaa_crm.crm_kpi_groupe"
    sequence="1"
    />


</odoo>
