<?xml version="1.0" encoding="utf-8"?>
<odoo>

        <record model="res.groups" id="aaa_access_crm_opportunity_report">
            <field name="name">Access leads analysis</field>
        </record>

    <record id="crm_rule_personal_lead_report" model="ir.rule">
        <field name="name">Personal Leads Analysis</field>
        <field ref="aaa_crm.model_crm_opportunity_report" name="model_id"/>
        <field name="domain_force">['|',('user_id','=',user.id),('user_id','=',False)]</field>
        <field name="groups" eval="[(4, ref('sales_team.group_sale_salesman'))]"/>
    </record>

    <record id="crm_rule_all_lead_report" model="ir.rule">
        <field name="name">All Leads Analysis</field>
        <field ref="aaa_crm.model_crm_opportunity_report" name="model_id"/>
        <field name="domain_force">[(1,'=',1)]</field>
        <field name="groups" eval="[(4, ref('sales_team.group_sale_salesman_all_leads'))]"/>
    </record>


    <record id="crm_opportunity_report_rule" model="ir.rule">
        <field name="name">Multi-Company Crm Opportunity Report</field>
        <field name="model_id" ref="aaa_crm.model_crm_opportunity_report"/>
        <field name="global" eval="True"/>
        <field name="domain_force">['|',('company_id','=',False),('company_id','child_of',[user.company_id.id])]</field>
    </record>
</odoo>